<mujoco model="panda_pick_place">
  <include file="panda.xml"/>

  <statistic center="0.3 0 0.4" extent="1"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- Pickable objects -->
    <body name="red_cube" pos="0.5 0.2 0.025">
      <freejoint/>
      <geom name="red_cube_geom" type="box" size="0.025 0.025 0.025" rgba="1 0.2 0.2 1" mass="0.05" condim="4" friction="1 0.005 0.0001"/>
      <inertial pos="0 0 0" mass="0.05" diaginertia="0.00004 0.00004 0.00004"/>
    </body>

    <body name="blue_cube" pos="0.4 -0.15 0.025">
      <freejoint/>
      <geom name="blue_cube_geom" type="box" size="0.025 0.025 0.025" rgba="0.2 0.2 1 1" mass="0.05" condim="4" friction="1 0.005 0.0001"/>
      <inertial pos="0 0 0" mass="0.05" diaginertia="0.00004 0.00004 0.00004"/>
    </body>

    <!-- Target zone (visual marker) -->
    <geom name="target_zone" type="cylinder" size="0.08 0.002" pos="0.3 -0.3 0.052" rgba="0.2 0.8 0.2 0.5"/>

    <!-- Overhead camera for Gemini vision -->
    <camera name="overhead_cam" pos="0.3 0 0.8" quat="1 0 0 0" fovy="50"/>
  </worldbody>
</mujoco>
